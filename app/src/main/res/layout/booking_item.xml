<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <TextView
            android:id="@+id/tvGroundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/gotham_medium_"
            android:maxLines="1"
            android:text="GroundName"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGroundLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGroundName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="Location"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvGroundPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/gotham_medium_"
            android:paddingBottom="6dp"
            android:text="Price"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGroundLocation"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="Booking Date"
            android:textColor="@color/light_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvBookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGroundLocation"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/tvBookingDate"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="Booking Time"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <RatingBar
            android:progressBackgroundTint="@color/white"
            android:id="@+id/ratingBar"
            android:isIndicator="false"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:scaleX="1.3"
            android:progressTint="#FFD700"
            android:scaleY="1.3"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookingDate"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:stepSize="1" />

        <Button
            android:id="@+id/btnCancelBooking"
            android:fontFamily="@font/gotham_medium_"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="10sp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:layout_below="@id/tvBookingDate"
            android:text="CANCEL BOOKING"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>