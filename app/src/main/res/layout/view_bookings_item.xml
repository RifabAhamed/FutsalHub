<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/gotham_medium_"
            android:maxLines="1"
            android:text="CustomerName"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGroundPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/gotham_medium_"
            android:paddingBottom="6dp"
            android:text="Price"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCustomerName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="Booking Date"
            android:textColor="@color/light_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvBookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCustomerName"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/tvBookingDate"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="Booking Time"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
           android:id="@+id/tvTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingDate"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="Transaction ID: "
            android:textColor="@color/light_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingDate"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tvTransactionId"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/gotham_book"
            android:maxLines="1"
            android:text="TransactionId"
            android:textColor="@color/light_white"
            android:textSize="14sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>